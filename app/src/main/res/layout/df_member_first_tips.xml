<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:id="@+id/mIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_member_first_tips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_eac89f_20dr"
        android:gravity="center"
        android:text="去看看"
        android:textColor="#745944"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/mIv"
        app:layout_constraintEnd_toEndOf="@id/mIv"
        app:layout_constraintStart_toStartOf="@id/mIv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91"
        app:layout_constraintWidth_percent="0.45" />
</androidx.constraintlayout.widget.ConstraintLayout>