<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loadinganimation00.LoadingAnimation00Activity">

    <!--    动态形状-->
    <com.jelly.thor.customview.loadinganimation00.ShapeView
        android:id="@+id/mShapeView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@id/mShadowV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--    阴影-->
    <View
        android:id="@+id/mShadowV"
        android:layout_width="25dp"
        android:layout_height="3dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_loading_animation00_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    文字-->
    <TextView
        android:id="@+id/mTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="玩命加载中。。。"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mShadowV" />
</androidx.constraintlayout.widget.ConstraintLayout>